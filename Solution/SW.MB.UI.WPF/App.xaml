<Application x:Class="SW.MB.UI.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- THEMES -->
        <ResourceDictionary Source="Themes/GreenDarkTheme.xaml" />

        <!-- DEFINITIONS -->
        <ResourceDictionary Source="Styles/Brushes.xaml" />
        <ResourceDictionary Source="Styles/Controls.xaml" />

        <!-- STYLES -->
        <ResourceDictionary Source="Styles/Buttons.xaml" />
        <ResourceDictionary Source="Styles/PasswordBoxes.xaml" />
        <ResourceDictionary Source="Styles/TextBlocks.xaml" />
        <ResourceDictionary Source="Styles/TextBoxes.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>
