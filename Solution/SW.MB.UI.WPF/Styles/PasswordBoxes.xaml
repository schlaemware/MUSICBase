<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style x:Key="BasePasswordBoxStyle" TargetType="{x:Type PasswordBox}" BasedOn="{StaticResource BaseControlStyle}">
    <Setter Property="CaretBrush" Value="{StaticResource MainForegroundBrush}" />
    <Setter Property="BorderThickness" Value="0,0,0,2" />
    <Setter Property="BorderBrush" Value="DarkGray" />
    <Setter Property="Padding" Value="4" />
  </Style>
  <Style TargetType="{x:Type PasswordBox}" BasedOn="{StaticResource BasePasswordBoxStyle}" />

  <Style x:Key="LoginPasswordBoxStyle" TargetType="{x:Type PasswordBox}" BasedOn="{StaticResource BasePasswordBoxStyle}">
    <Setter Property="Foreground" Value="{StaticResource MainForegroundBrush}" />
    <Setter Property="Padding" Value="20,4,4,4" />
    <Setter Property="Background">
      <Setter.Value>
        <ImageBrush ImageSource="pack://application:,,,/Assets/Images/key-icon.png"
                    Stretch="None" AlignmentX="Left" />
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>