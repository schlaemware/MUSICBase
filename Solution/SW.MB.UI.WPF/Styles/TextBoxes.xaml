<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style x:Key="BaseTextBoxStyle" TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseControlStyle}">
    <Setter Property="CaretBrush" Value="{StaticResource MainForegroundBrush}" />
    <Setter Property="BorderThickness" Value="0,0,0,2" />
    <Setter Property="BorderBrush" Value="DarkGray" />
    <Setter Property="Background">
      <Setter.Value>
        <ImageBrush ImageSource="pack://application:,,,/Assets/Images/user-icon.png"
                    Stretch="None" AlignmentX="Left" />
      </Setter.Value>
    </Setter>
    <Setter Property="Padding" Value="20,4,4,4" />
  </Style>
  <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseTextBoxStyle}" />
</ResourceDictionary>