<Window x:Class="SW.MB.UI.WPF.Views.Windows.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SW.MB.UI.WPF.Views.Windows"
        mc:Ignorable="d"
        Title="SplashWindow" Height="450" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <TextBlock Grid.Row="0" Text="SPLASH WINDOW" VerticalAlignment="Center" TextAlignment="Center" FontSize="40" />
    <TextBlock Grid.Row="1" x:Name="StatusTextBlock" Text="[..STATUTS..]" VerticalAlignment="Center" TextAlignment="Center" />
  </Grid>
</Window>
