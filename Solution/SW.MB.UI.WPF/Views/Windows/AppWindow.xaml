<Window x:Class="SW.MB.UI.WPF.Views.Windows.AppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SW.MB.UI.WPF.Views.Windows"
        xmlns:vms="clr-namespace:SW.MB.UI.WPF.ViewModels"
        mc:Ignorable="d"
        Title="MUSICBase" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance vms:AppViewModel, IsDesignTimeCreatable=False}">

  <Grid>
    <TabControl>
      <TabItem Header="Mandators">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>
          <DataGrid Grid.Row="0" ItemsSource="{Binding Mandators}" AutoGenerateColumns="True" CanUserAddRows="True" />
          <Button Grid.Row="1" Content="Store" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8" Padding="20,8"
                  Command="{Binding StoreMandatorsCommand}" />
        </Grid>
      </TabItem>
      <TabItem Header="Users">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>
          <DataGrid Grid.Row="0" ItemsSource="{Binding Users}" AutoGenerateColumns="True" CanUserAddRows="True" />
          <Button Grid.Row="1" Content="Store" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8" Padding="20,8"
                  Command="{Binding StoreUsersCommand}" />
        </Grid>
      </TabItem>
      <TabItem Header="Compositions">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>
          <DataGrid Grid.Row="0" ItemsSource="{Binding Compositions}" AutoGenerateColumns="True" CanUserAddRows="True" />
          <Button Grid.Row="1" Content="Store" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8" Padding="20,8"
                  Command="{Binding StoreCompositionsCommand}" />
        </Grid>
      </TabItem>
      <TabItem Header="Musicians">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>
          <DataGrid Grid.Row="0" ItemsSource="{Binding Musicians}" AutoGenerateColumns="True" CanUserAddRows="True" />
          <Button Grid.Row="1" Content="Store" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8" Padding="20,8"
                  Command="{Binding StoreMusiciansCommand}" />
        </Grid>
      </TabItem>
      <TabItem Header="Members">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>
          <DataGrid Grid.Row="0" ItemsSource="{Binding Members}" AutoGenerateColumns="True" CanUserAddRows="True" />
          <Button Grid.Row="1" Content="Store" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8" Padding="20,8"
                  Command="{Binding StoreMembersCommand}" />
        </Grid>
      </TabItem>
    </TabControl>
  </Grid>
</Window>
