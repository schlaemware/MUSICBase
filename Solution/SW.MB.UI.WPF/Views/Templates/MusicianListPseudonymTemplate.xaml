<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:observables="clr-namespace:SW.MB.UI.WPF.Models.Observables">

  <DataTemplate x:Key="MusicianListPseudonymTemplate" DataType="{x:Type observables:ObservableMusician}">
    <Border Padding="4" Background="LightSkyBlue" BorderThickness="0">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding Fullname}" />
        <TextBlock Grid.Row="1" Text="Pseudonym" FontStyle="Italic" />
      </Grid>
    </Border>
  </DataTemplate>
</ResourceDictionary>