<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:observables="clr-namespace:SW.MB.UI.WPF.Models.Observables">

  <DataTemplate x:Key="MusicianDetailPseudonymTemplate" DataType="{x:Type observables:ObservableMusician}">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="20" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <TextBlock Grid.Column="0" Grid.Row="0" Text="Firstname" />
      <TextBlock Grid.Column="2" Grid.Row="0" Text="{Binding Firstname}" />

      <TextBlock Grid.Column="0" Grid.Row="1" Text="Lastname" />
      <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding Lastname}" />

      <TextBlock Grid.Column="0" Grid.Row="4" Text="Pseudonym" />
      <TextBlock Grid.Column="2" Grid.Row="4" Text="{Binding Origin.Fullname}" />
    </Grid>
  </DataTemplate>
</ResourceDictionary>